<div class="container">
  <p style="color: green"><%= notice %></p>

  <h1>All our Flats</h1>

  <div id="flats">
    <div class="row">
      <% @flats.each_with_index do |flat, index| %>
        <% if index % 3 == 0 && index != 0 %>
          </div><div class="row">
        <% end %>
        <div class="col-md-4 mb-4">
          <%= render flat %>
        </div>
      <% end %>
    </div>
  </div>
</div>
